<table class="table table-striped table-hover table-bordered table-sm">
  <thead class="table-dark">
    <tr>
      
      <th>Patient name</th>
      <th>Address</th>
      <th>Gender</th>
      <th>DOB</th>
      <th>Email</th>
      <th>Department</th>
      <th>Phone</th>
     
    </tr>
  </thead>
<tbody>
    <tr>
        <td> <%= @patient.patient_name %> </td>
        <td> <%= @patient.address %> </td>
        <td> <%= @patient.gender %> </td>
        <td> <%= @patient.dob %> </td>
        <td> <%= @patient.email %> </td>
        <td> <%= @patient.department %> </td>
        <td> <%= @patient.phone %> </td>
    </tr>
</tbody>
</table>