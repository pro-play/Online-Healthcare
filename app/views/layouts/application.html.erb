<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

     <title>Onlinehealth</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   
  </head>
  <body>
  <% if !session[:patient_id] && !session[:doctor_id] && !session[:hospital_id] %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
  <%= link_to 'Online Health Care', root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">

      

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Register
          </a>
          <ul class="dropdown-menu" aria-labelledby="Login">
          <li><%= link_to 'Hospital Registration', new_hospital_path, class:"dropdown-item" %></li>
          <li> <%= link_to 'Patient Registration',  {:controller => :patients, :action => :index}, class:"dropdown-item" %></li>
          
        </ul>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Login
          </a>
          <ul class="dropdown-menu" aria-labelledby="Login">
            <li><%= link_to "Hospital Login", {:controller => :hospitals, :action => :login}, { class: 'dropdown-item'} %></li>
            <li><%= link_to "Doctor Login", {:controller => :doctors, :action => :login}, { class: 'dropdown-item'} %></li>
            <li><%= link_to "Patient Login", {:controller => :patients, :action => :login}, { class: 'dropdown-item'} %></li>
          </ul>
        </li>
        <li class="nav-item">
        <%= link_to "List of Hospitals", hospitals_path, class:"nav-link" %>
        </li>
        </ul>

    

        <% if session[:hospital_id] %>
          <h2 class="text-light"> <%= @hospital.email%> <%= link_to "Logout", {:controller => :hospitals, :action => :logout}, { class: 'btn btn-secondary'} %> </h2>
        
        <% end %>
        <% if session[:doctor_id] %>
          <h2 class="text-light">  <%= @doctor.email%> <%= link_to "Logout", {:controller => :doctors, :action => :logout}, { class: 'btn btn-secondary'} %></h2>
          
        <% end %>
        <% if session[:patient_id] %>
          <h4 class=" text-light"> <%= @patient.email%>  <%= link_to "Logout", {:controller => :patients, :action => :logout}, { class: 'btn btn-secondary'} %></h4>
       
        <% end %>

     
     
        </div>
      </div>
     </nav>
     <% else %>
           <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
  <div class="container-fluid">
  <%= link_to 'Online Health Care', root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    

    <div class="collapse navbar-collapse" style="display: flex; justify-content: flex-end;" id="navbarSupportedContent">
      
    <div class =" nav-page">
    

        <% if session[:hospital_id] %>
          <h2 class="text-light"> <%= @hospital.hospital_name%> <%= link_to "Logout", {:controller => :hospitals, :action => :logout}, { class: 'btn btn-secondary'} %> </h2>
        
        <% end %>
        <% if session[:doctor_id] %>
          <h2 class="text-light">  <%= @doctor.doctor_name%> <%= link_to "Logout", {:controller => :doctors, :action => :logout}, { class: 'btn btn-secondary'} %></h2>
          
        <% end %>
        <% if session[:patient_id] %>
          <h4 class=" text-light"> <%= @patient.patient_name%>  <%= link_to "Logout", {:controller => :patients, :action => :logout}, { class: 'btn btn-secondary'} %></h4>
       
        <% end %>

     </div>
     
        </div>
      </div>
     </nav>
     <% end %>
    <br />  
    
    <div class="container">
      <%= yield %>
    </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <!--
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    -->
  </body>
</html>



